@using IP3_Group4.Models
@model Analytics
@{
    ViewBag.Title = "SpendingPie";
}

@{
    var myChart = new Chart(width: 550, height: 400, themePath: "/Content/ChartFormatter.xml")
        .AddTitle("Products")
        .AddSeries(
            name: "Items",
            xValue: Model.Products.Select(p => p.Product).Take(5).ToArray(),
            yValues: Model.Products.Select(p => p.Buys).Take(5).ToArray())
        .Write();
}