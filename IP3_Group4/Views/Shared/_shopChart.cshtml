@using IP3_Group4.Models
@model Analytics 
@{
    ViewBag.Title = "ShopPie";
}

@{
    var myChart = new Chart(width: 600, height: 400)
        .AddTitle("Shops")
        .AddSeries(
            name: "Shop",
            chartType: "Pie",
            xValue: Model.Shops.Select(s => s.Shop).ToArray(),
            yValues: Model.Shops.Select(s => s.Visits).ToArray());
    myChart.AddLegend("Legend");
    myChart.Write();
}