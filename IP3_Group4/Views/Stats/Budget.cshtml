@using IP3_Group4.Models;
@model Budget
@{
    ViewBag.Title = "Budget";
}

<h2>Your Budget</h2>

@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("Budget", "Stats", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h4>Set your monthly budget here.</h4>
        <hr />
        if (ViewBag.Message != null)
        {
            if (ViewBag.Message == "Budget set successfully!")
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            } else {
                <div class="alert alert-danger">
                    @ViewBag.Message
                </div>
            }
        
        }

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.LastReset)
        @Html.HiddenFor(model => model.NextReset)
        
        <div class="form-group">
            @Html.LabelFor(m => m.Amount, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ResetPeriod, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ResetPeriod, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Save Budget" />
            </div>
        </div>
    }

<hr />  

    if (Model != null && Model.Analytics != null)
    {
        <p>You have £@Model.Analytics.Remaining left in your budget.</p>
        <p>At the current rate of spending, you will have spent @Model.Analytics.TargetPercentage% of your budget by @Model.NextReset.ToString("dd/MM/yyyy")</p>
        <p>There are @Model.Analytics.DaysLeft days left before your budget resets.</p>        
    }
}
else
{
    <p>You must be logged in to view this page!</p>
}